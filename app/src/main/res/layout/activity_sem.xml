<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:weightSum="2">
        <TextView

            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="First Sem"/>
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="Second Sem"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="Third Sem"/>
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="Fourth Sem"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="Fifth Sem"/>
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="Sixth Sem"/>

    </LinearLayout>
</LinearLayout>