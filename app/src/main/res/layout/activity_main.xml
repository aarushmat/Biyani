<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/notebook_24"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/note"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="My Libraries"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/next"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/class1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/class1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/class1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="Live Classes"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/next"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:weightSum="2">
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="Bsc-Msc"/>
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="BA-MA"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="BComm"/>
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="BBA"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="BCA"/>
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="LLB"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="BEd"/>
        <TextView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonselected2"
            android:text="STC"/>

    </LinearLayout>
</LinearLayout>